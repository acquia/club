  'ac-env' => '{{alias["env-name"]}}',
  'ac-realm' => '{{alias["ac-realm"]}}',
  'uri' => '{{alias["uri"]}}',
  'remote-host' => '{{alias["remote-host"]}}',
  'remote-user' => '{{alias["remote-user"]}}',
